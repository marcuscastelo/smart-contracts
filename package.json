{
    "private": true,
    "version": "0.0.2",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "compile-contracts": "rm -rf build/contracts && cd truffle && truffle compile && mv build ..",
        "generate-types": "rm -rf ./types && yarn compile-contracts && typechain --target=truffle-v5 'build/contracts/*.json'",
        "generate-migrations": "rm -rf ./truffle/migrations && tsc -p ./tsconfig.migrate.json --outDir ./truffle/migrations",
        "migrate": "yarn compile-contracts && yarn generate-migrations && truffle migrate --reset",
        "typecheck": "yarn generate-types && tsc --noEmit",
        "test": "yarn generate-migrations && truffle test",
        "clean": "rm -rf ./build ./migrations ./types",
        "start": "tsc && node ./dist/src/main.js"
    },
    "dependencies": {
        "@truffle/contract-schema": "^3.4.6",
        "@truffle/contract": "^4.5.3",
        "@typechain/truffle-v5": "^8.0.0",
        "@types/bn.js": "^4.11.6",
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@types/web3": "^1.2.2",
        "truffle": "^5.1.22",
        "truffle-assertions": "^0.9.2",
        "typechain": "^8.0.0",
        "typescript": "^4.6",
        "web3": "^1.7.1",
        "web3-core": "^1",
        "web3-eth-contract": "^1",
        "web3-utils": "^1"
    },
    "devDependencies": {
        "truffle-typings": "^1.0.8"
    }
}
